        <Button Content="Login" Height="23" HorizontalAlignment="Left" Name="button1" VerticalAlignment="Top" Width="104" Click="Button1_Click" RenderTransformOrigin="0.496,1.694" Canvas.Left="118" Canvas.Top="249" />
